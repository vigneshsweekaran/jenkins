pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'azure-credential', usernameVariable: 'AZURE_USERNAME', passwordVariable: 'AZURE_PASSWORD')]) {
                  sh 'az login -u ${AZURE_USERNAME} -p ${AZURE_PASSWORD}'
                }
                sh 'az group list'
            }
        }
    }
}
