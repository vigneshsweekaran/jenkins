pipeline {
    agent any
    environment {
        BRANCH_NAME = sh(script:" echo $GIT_BRANCH | sed \'s#origin/##\'", returnStdout: true).trim()  // .tim() in the end is very important
    }
    stages {
        stage ('Print branch name'){
            steps {
                echo "Branch name : ${BRANCH_NAME}"
            }
        }
        stage ('master Branch') {
            // when condition for environment variables
            when {
                environment name: "BRANCH_NAME", value: "master"
            }
            // Approach 2 -  when condition for environment variables
            when {
                expression {
                    return BRANCH_NAME == 'master'
                }
            }
            steps {
                echo "Branch name : ${BRANCH_NAME}"
            }
        }
        stage ('Develop branch') {
            when {
                environment name: "BRANCH_NAME", value: "develop"
            }
            steps {
                echo "Branch name : ${BRANCH_NAME}"
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}
