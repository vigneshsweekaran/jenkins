pipeline {
    agent any
    environment {
        BRANCH_NAME = sh(script:" echo $GIT_BRANCH | sed \'s#origin/##\'", returnStdout: true).trim()
    }
    stages {
        stage ('Print branch name'){
            steps {
                echo "Branch name : ${BRANCH_NAME}"
            }
        }
        stage ('master Branch') {
            when {
                environment name: "BRANCH_NAME", value: "master"
            }
            steps {
                echo "Branch name : ${BRANCH_NAME}"
            }
        }
        stage ('Develop branch') {
            when {
                environment name: "BRANCH_NAME", value: "develop"
            }
            steps {
                echo "Branch name : ${BRANCH_NAME}"
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}
